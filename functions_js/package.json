{
  "name": "functions_js",
  "description": "Cloud Functions for Firebase (JS)",
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "scripts": {
    "lint":   "eslint .",
    "serve":  "firebase emulators:start --only functions",
    "shell":  "firebase functions:shell",
    "start":  "npm run shell",
    "deploy": "firebase deploy --only functions:functions_js",
    "logs":   "firebase functions:log"
  },

  "dependencies": {
    "firebase-functions": "^6.0.1",
    "firebase-admin":     "^12.6.0"
  },

  "devDependencies": {
    "eslint":              "^8.56.0",
    "eslint-config-google":"^0.14.0",
    "firebase-functions-test": "^3.1.0"
  },

  "private": true
}
